Bootstrap: docker
From: alpine:edge
Stage: build

%post
    apk update
    apk add git
    apk add --no-cache alpine-sdk git pkgconf cmake autoconf automake \
        bash curl-dev sqlite-dev pcre2-dev fmt-dev ffmpeg-dev

    cd /root/
    git clone https://github.com/allinurl/gwsocket
    cd gwsocket
    autoreconf -fiv
    ./configure
    make

    cd /root/
    git clone https://github.com/pbtrung/music
    cd music
    chmod +x make.sh
    ./make.sh


Bootstrap: docker
From: alpine:edge
Stage: final

%files from build
    /root/music/build/music /usr/bin/
    /root/gwsocket/gwsocket /usr/bin/

%post
    apk update
    apk upgrade
    apk add --no-cache curl sqlite-libs pcre2 fmt \
        ffmpeg-libavcodec ffmpeg-libavformat ffmpeg-libswresample ffmpeg-libavutil \
        snapcast-server

%startscript
    #!/bin/ash
    cd ~/music
    rm -rf mopidy nohup.out
    mkdir mopidy
    snapserver --config snapserver.conf &
    music config.json | gwsocket --port=9000 --addr=0.0.0.0 --std

%runscript
    #!/bin/ash
    cd ~/music
    rm -rf mopidy nohup.out
    mkdir mopidy
    snapserver --config snapserver.conf &
    music config.json | gwsocket --port=9000 --addr=0.0.0.0 --std
